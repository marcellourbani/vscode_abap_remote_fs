{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "rootDir": "src",
    "outDir": "out",
    "lib": ["es2019", "DOM"],
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "composite": true
  },
  "include": ["src", "./src/testdata/*.json"],
  "exclude": ["node_modules"]
}
