{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "rootDir": "src",
    "moduleResolution": "node",
   "ignoreDeprecations": "6.0",
    "outDir": "./out",
    "sourceMap": true,
    "strict": true,
    // "noUnusedLocals": true,
    "composite": true,
    /* Incremental Compilation */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".vscode-test"
    // "src/**/*.test.ts"
  ]
}
